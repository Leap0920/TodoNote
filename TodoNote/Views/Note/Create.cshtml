@model TodoNote.Models.Note

@{
    ViewData["Title"] = "Create Note";
}

<style>
    .note-form-outer {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.10);
        padding: 8px;
    }

    .note-form-inner {
        border: 2px solid #111;
        border-radius: 0.8rem;
        padding: 24px 18px 18px 18px;
        background: #fff;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(16px);
        }

        to {
            opacity: 1;
            transform: none;
        }
    }
</style>

<h1 class="mb-4"><i class="bi bi-plus-circle"></i> Create Note</h1>
<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="note-form-outer">
            <div class="note-form-inner" style="animation: fadeIn 0.6s;">
                <form asp-action="Create" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Title" class="form-control" placeholder="Title" />
                        <label asp-for="Title"></label>
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Content" class="form-control" placeholder="Content" style="height: 180px"></textarea>
                        <label asp-for="Content"></label>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-link text-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
